<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-2">Author List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="text-end">
                <a asp-controller="Author" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add New Author</a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Author Id</th>
                    <th>Author Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/Author/Index.js"></script>
}