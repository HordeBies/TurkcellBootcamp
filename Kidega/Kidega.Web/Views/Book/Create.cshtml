@model BookCreateVM
<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-2">Add Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="Book" asp-action="Create" method="post" class="row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Title" class="form-control border-0 shadow" />
                            <label asp-for="Book.Title" class="ms-2">Book Title</label>
                            <span asp-validation-for="Book.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select border-0 shadow">
                                <option value="">Select Author</option>
                            </select>
                            <label asp-for="Book.AuthorId" class="ms-2">Author</label>
                            <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="Book.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option value="">Select Category</option>
                            </select>
                            <label asp-for="Book.CategoryId" class="ms-2">Category</label>
                            <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Book.Price" class="form-control border-0 shadow" />
                            <label asp-for="Book.Price" class="ms-2">Book Price</label>
                            <span asp-validation-for="Book.Price" class="text-danger"></span>
                        </div>
                        <div class="row text-center mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-dark shadow-none form-control">Create</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-dark shadow-none form-control">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}